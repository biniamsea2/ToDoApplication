@model ToDoWebApp.Models.ToDoList

@{
    ViewData["Title"] = "Details";
}
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>


    <div>
        <h4>Task Details</h4>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Task)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Task)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Completed)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Completed)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Priority)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Priority)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DueDate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DueDate)
            </dd>
        </dl>
    </div>
    <div class="btn btn-primary">
        <a id="back" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
    </div>

    <div class="btn btn-primary">
        <a id="back" asp-action="Index">Back to List</a>
    </div>
</body>
</html>